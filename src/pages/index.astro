---
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import BlogList from "../components/BlogList.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import profilePicture from "../assets/profile-picture.jpg";
import GwennHaDu from "../assets/gwenn-ha-du.svg";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Home | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
      }
      .hero {
        display: flex;
        align-items: center;
        gap: 3rem;
        padding: 4rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
      }
      .profile-picture {
        flex-shrink: 0;
      }
      .profile-picture img {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        object-fit: cover;
        box-shadow: var(--box-shadow);
      }
      .gwenn-ha-du {
        display: inline;
        vertical-align: text-top;
        height: 0.9em;
        width: 1.4em;
        object-fit: contain;
        border-radius: 4px;
      }
      .hero-content {
        flex: 1;
      }
      @media (max-width: 768px) {
        .hero {
          flex-direction: column;
          text-align: center;
          gap: 2rem;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <div class="hero">
        <div class="profile-picture">
          <Image
            src={profilePicture}
            alt="Profile picture"
            width="300"
            height="300"
          />
        </div>
        <div class="hero-content">
          <h1>Hi, I'm AlexisÂ ðŸ‘‹</h1>
          <p>
            I'm a developer passionate about accessibility and mobile
            development. I write about Jetpack Compose, Flutter, React Native
            and more! Currently working at
            <a href="https://www.theodo.com/">Theodo</a> from Nantes
            <GwennHaDu class="gwenn-ha-du" aria-label="Brittany flag" />. On
            this blog, you'll find posts in English or French: feel free to ask
            for translations if you need any!
          </p>
        </div>
      </div>

      <BlogList />
    </main>
    <Footer />
  </body>
</html>
